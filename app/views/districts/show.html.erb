<div class="my-fluid-container">
	<div class= "row">
		<div class="col-md-12">
			<h2><%=link_to @district.city.name, @district.city %>>><%= @district.name %></h2>
			<p><%= number_with_delimiter(@projects_total_gfa) %> sq m of competitive retail space in this district</p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<%= render 'map' %>
		</div> 
	</div><!-- end of class row -->

	<div class="row">
		<div class="col-md-12">

			<table class="table table-hover">
				<thead>
					<tr>
						<th>Project</th>
						<th>Developer</th>
						<th>GFA</th>
						<th>Opening</th>
					</tr>
				</thead>
				<tbody>
					<% @projects.each do |project| %>
					<tr>
						<td style="vertical-align:middle;"><%= link_to image_tag(project.image.url(:small), :class => "img-thumbnail"), project %>  <%= link_to project.name, project %></td>
						<td style="vertical-align:middle;"><%= link_to project.developer.name, project.developer %></td>
						<td style="vertical-align:middle;"><%= number_with_delimiter(project.gfa, :delimiter => ',') %></td>
						<td style="vertical-align:middle;"><%= project.opening_year %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

		</div>
	</div><!-- end of class row -->
</div>

<script>
window.onload = ready
</script>